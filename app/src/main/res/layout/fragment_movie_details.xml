<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="net.pilpin.nanodegree_popularmovies.MovieDetails_Fragment"
                android:paddingLeft="@dimen/movie_details_padding"
                android:paddingTop="@dimen/movie_details_padding"
                android:paddingRight="@dimen/movie_details_padding"
                android:paddingBottom="@dimen/movie_details_padding">

    <ImageView
        android:layout_width="@dimen/movie_details_poster_width"
        android:layout_height="@dimen/movie_details_poster_height"
        android:id="@+id/details_poster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/accessibility_poster_description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/details_release_date"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/details_poster"
        android:layout_toEndOf="@+id/details_poster"
        android:layout_marginStart="@dimen/movie_details_margin"
        android:layout_marginLeft="@dimen/movie_details_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/details_vote_average"
        android:layout_below="@+id/details_release_date"
        android:layout_toRightOf="@+id/details_poster"
        android:layout_toEndOf="@+id/details_poster"
        android:layout_marginTop="@dimen/movie_details_margin_small"
        android:layout_marginStart="@dimen/movie_details_margin"
        android:layout_marginLeft="@dimen/movie_details_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/details_synopsis"
        android:layout_below="@+id/details_poster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/movie_details_margin"/>
</RelativeLayout>
