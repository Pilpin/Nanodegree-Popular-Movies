<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="net.pilpin.nanodegree_popularmovies.MovieDetails_Fragment"
                android:paddingLeft="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingBottom="@dimen/padding">

    <ImageView
        android:layout_width="@dimen/movie_details_poster_width"
        android:layout_height="@dimen/movie_details_poster_height"
        android:id="@+id/details_poster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:contentDescription="@string/accessibility_poster_description"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:id="@+id/details_vote_average"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/details_favorite"
        android:layout_toRightOf="@+id/details_poster"
        android:layout_toEndOf="@+id/details_poster"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/details_release_date"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/details_favorite"
        android:layout_toRightOf="@+id/details_vote_average"
        android:layout_toEndOf="@+id/details_vote_average"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:gravity="center_vertical"/>

    <CheckBox
        android:id="@+id/details_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@android:drawable/btn_star"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/details_synopsis"
        android:layout_below="@+id/details_vote_average"
        android:layout_toRightOf="@+id/details_poster"
        android:layout_toEndOf="@+id/details_poster"
        android:layout_marginTop="@dimen/margin_large"/>
</RelativeLayout>
